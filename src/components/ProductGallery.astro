---
interface Product {
  id: string;
  image: string;
  title: string;
  price: string;
}

interface Props {
  products: Product[];
}

let { products } = Astro.props;
---

<div
  class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8"
>
  {
    products.map((product) => (
      <div class="flex flex-col items-center bg-white rounded-sm shadow-lg overflow-hidden">
        <img
          src={`/images/place.jpg`}
          alt={product.title}
          class="w-full object-cover bg-gray-200"
        />
        <div class="p-4 text-center">
          <h3 class="text-lg font-medium text-gray-900 mb-2">
            {product.title}
          </h3>
          <p class="text-gray-600">{product.price}</p>
        </div>
      </div>
    ))
  }
</div>
